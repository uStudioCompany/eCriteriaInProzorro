{
  "compilerOptions": {
    "strict": true,
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": false,
    "lib": ["dom", "esnext"],
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "typing.d.ts"],
  "exclude": ["node_modules"]
}
